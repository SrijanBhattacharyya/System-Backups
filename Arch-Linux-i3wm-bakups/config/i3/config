# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# SHOWS ONLY SYSTEM INFO
bar {
	# Top Bar
	id statusbar
	position top
	status_command i3status -c ~/.config/i3status/config
	font pango:monospace 10
	height $StatusBarHeight

	# hide tray
	tray_output none

	# color settings
	colors {
		background		$StatusBarBackgroundColor
		# separator		$StatusBarSeperatorColor
		# statusline		$StatusBarTextColor
	}

	# hide workspaces
	workspace_buttons no

	# gap setttings
	# padding auto
}


# SHOWS ONLY WORKSPACES
bar {
	# Bottom Bar
	id workspacesbar
	position bottom
	status_command i3status -c ~/.config/i3workspaces/config
	height $StatusBarHeight
	font xft:Hack Nerd Font, FontAwesome 10

	workspace_min_width 10

	# tray
	tray_padding 5

	# color settings
	colors {
		background		$StatusBarBackgroundColor
		separator		$StatusBarSeperatorColor
		# statusline		$StatusBarTextColor

		# class				 	border					Background					text
		focused_workspace		$BorderColor			$StatusBarBackgroundColor	$StatusBarTextColor
		inactive_workspace		$InactiveBorderColor	$StatusBarBackgroundColor	$StatusBarTextColor
		urgent_workspace		$UrgentBorderColor		$StatusBarBackgroundColor	$StatusBarTextColor
		}

	# gap setttings
	#padding	top[px]	right[px]	bottom[px]	left[px]
	padding		0		0			0			0
}


