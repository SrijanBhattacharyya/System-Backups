client.focused_inactive $InactiveBorderColor	$StatusBarBackgroundColor		$StatusBarTextColor	$StatusBarBackgroundColor
client.urgent			$UrgentBorderColor		$StatusBarBackgroundColor		$StatusBarTextColor	$StatusBarBackgroundColor


