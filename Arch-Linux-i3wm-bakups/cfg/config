## setting some variables
# default mod key
set $super Mod4

# default wallpaper
set $wppr /home/rohit/wallpapers/wp-0.png

# default brightness
set $brhtness   50
set $bchange    5

# default volume
set $vol        90
set $vchange    5

# default IO devices
set $speaker	0
set $mic	1


## default apps
# browser
